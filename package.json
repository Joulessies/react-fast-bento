{
  "name": "react-fast-bento",
  "version": "0.1.0",
  "description": "Lightweight React components for bento grid layouts and boxes.",
  "license": "MIT",
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "types": "src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "src"
  ],
  "keywords": [
    "react",
    "bento",
    "grid",
    "layout",
    "components"
  ],
  "author": "Julius",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Julius/react-fast-bento-remakea.git"
  },
  "bugs": {
    "url": "https://github.com/Julius/react-fast-bento-remake/issues"
  },
  "homepage": "https://github.com/Julius/react-fast-bento-remake#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@babel/preset-react": "^7.27.1",
    "jest-cli": "^30.1.3",
    "prop-types": "^15.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.12.0",
    "@size-limit/preset-small-lib": "^11.1.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.12.0",
    "eslint-plugin-react": "^7.37.1",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "size-limit": "^11.1.4",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:ci": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --ci --reporters=default",
    "typecheck": "npx tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.js\" \"test/**/*.js\"",
    "size": "size-limit"
  },
  "size-limit": [
    {
      "path": "src/index.js",
      "import": "{ BentoGrid, BentoBox }",
      "limit": "2 kB"
    }
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.js"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "**/?(*.)+(test).[jt]s?(x)"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    }
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  }
}
