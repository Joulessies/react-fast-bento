{
  "name": "react-fast-bento",
  "version": "0.1.0",
  "description": "Lightweight React components for bento grid layouts and boxes.",
  "license": "MIT",
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "types": "src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "src"
  ],
  "keywords": [
    "react",
    "bento",
    "grid",
    "layout",
    "components"
  ],
  "author": "Julius",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Julius/react-fast-bento-remakea.git"
  },
  "bugs": {
    "url": "https://github.com/Julius/react-fast-bento-remake/issues"
  },
  "homepage": "https://github.com/Julius/react-fast-bento-remake#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@babel/preset-react": "^7.27.1",
    "prop-types": "^15.8.1"
  },
  "devDependencies": {
    "eslint": "^9.12.0",
    "eslint-plugin-react": "^7.37.1",
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.0",
    "babel-jest": "^30.1.2",
    "jest": "^30.1.2",
    "jest-environment-jsdom": "^30.1.2",
    "size-limit": "^11.1.4",
    "@size-limit/preset-small-lib": "^11.1.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "scripts": {
    "test": "jest",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.js\" \"test/**/*.js\"",
    "size": "size-limit"
  },
  "size-limit": [
    {
      "path": "src/index.js",
      "import": "{ BentoGrid, BentoBox }",
      "limit": "2 kB"
    }
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.js"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "**/?(*.)+(test).[jt]s?(x)"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    }
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  }
}
